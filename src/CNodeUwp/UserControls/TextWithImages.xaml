    xmlns:local="using:CNodeUwp.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="24"
    d:DesignWidth="400">

    <Grid>
        <Image Name="imgTopIcon" Source="/Assets/Up24x24.png" Width="24" Height="24" HorizontalAlignment="Left" Visibility="Collapsed"></Image>
